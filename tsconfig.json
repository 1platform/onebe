{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": true,
    "emitDeclarationOnly": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": false,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "target": "ES2022"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.d.tsx"
  ],
  "exclude": [
    "node_modules",
    "*.test.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.md",
    "Tests"
  ],
  "tsc-alias": {
    "verbose": true,
    "resolveFullPaths": true
  },
  "ts-node": {
    "esm": true
  }
}
